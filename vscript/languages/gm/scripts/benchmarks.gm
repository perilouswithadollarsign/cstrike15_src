print("*** HEAPSORT ***");

global IM = 139968.;
global IA =   3877.;
global IC =  29573.;
global LAST = 42.;

gen_random = function(max)
{
    global LAST = (LAST * IA + IC) % IM;
    return ((max * LAST) / IM);
};

heapsort = function(n, ra)
{
  l = n/2 + 1;
  ir = n;

  for(;;)
  {
    if(l > 1)
    {
      l=l-1;
      rra = ra[l];
    }
    else
    {
      rra = ra[ir];
      ra[ir] = ra[1];
      ir=ir-1;
      if(ir == 1)
      {
        ra[1] = rra;
        return;
      }
    }

    i = l;
    j = l * 2;
    while(j <= ir)
    {
      if(j < ir and ra[j] < ra[j+1])
      {
        j=j+1;
      }
      if(rra < ra[j])
      {
        ra[i] = ra[j];
        i = j;
        j = j + i;
      }
      else
      {
        j = ir + 1;
      }
    }

    ra[i] = rra;
  }
};

TICK();

local ary = table();
local N = 80000;

for(i = 0; i < N; i=i+1)
{
  ary[i] = gen_random(1.0);
}

heapsort(N, ary);
print(ary[N-1]);
print("time = ", TICK());
