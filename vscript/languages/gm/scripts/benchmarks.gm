print("*** ACKERMAN ***");

global Ack = function(M, N)
{
  if (M == 0)
  {
    N=N+1;
    return(N);
  }
	
  if (N == 0)
  {
    M=M-1;
    return(Ack(M, 1));
  }
  N=N-1;
  return (Ack(M-1, Ack(M, N)));
};

